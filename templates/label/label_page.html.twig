{% extends '_template.html.twig' %}

{% block title %}Liste des Albums!{% endblock %}

{% block content %}

<div class="section">
    <h1 class="title">Label : {{label.name}}</h1>
<section class="section">

<a href="{{path('label_list')}}" class="button">Retour sur la page des labels</a>

    <div class="columns">
        <div class="column is-two-fifth">
            <figure class="image is-1by1">
                <img src="https://loremflickr.com/1024/1024/album,music/all?lock={{label.id}}">
            </figure>
        </div>

        <div class="column">
            <h1 class="title has-text-primary">
                {#{record.title}#}
            </h1>
            <h2 class="subtitle">
                Artiste: {{label.name}}
                <a href="{#{path('artist_page', {id:record.artist.id})}#}">
                    {#{record.artist.name}#}
                </a>
            </h2>

            <p class="content">
                {#{record.description}#}
            </p>
            <hr>
            Album(s) : 
            <p>
              {%  include '/record/_record_list.html.twig' with {record_list:label.getRelation()} %}
            </p>
            <hr>
            <h6 class="is-size-7">
                <span class="icon has-text-info"><i class="fas fa-info-circle"></i></span>
                <span>{#{record.releasedAt|date('d/m/Y')}#}</span>
            </h6>
        </div>
    </div>
</section>
   
</div>
{% endblock %}
